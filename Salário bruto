s = float(input("Informe o seu salário: "))

if (s<=350):
    s2 = s + 100 - (s * 0.07)
    print(f"O salário a ser recebido é de R${s2:.2f} ")
elif (s<=600):
    s2 = s + 75 - (s * 0.07)
    print(f"O salário a ser recebido é de R${s2:.2f} ")
elif (s<=900):
    s2 = s + 50 - (s * 0.07)
    print(f"O salário a ser recebido é de R${s2:.2f} ")
else:
    s2 = s + 35 - (s * 0.07)
    print(f"O salário a ser recebido é de R${s2:.2f} ")
