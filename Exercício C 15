#include <stdio.h>

int main(void) {

  int mat[4][4], soma=0, i, j;

  for(i=0;i<4;i++){
    for(j=0;j<4;j++){
      printf("Informe o valor da matriz:[%d][%d] ",i,j);
      scanf("%d", &mat[i][j]);
    }
  }
  for(i=0;i<4;i++){
    for(j=0;j<4;j++){
      if(i>=j){
        soma+= mat[i][j];
      }
    }
  }
  printf("A soma dos elementos Ã©: %d", soma);
  
  
  return 0;
}
